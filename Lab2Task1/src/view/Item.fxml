<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane
        fx:controller="PreviewItem"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="150.0"
        prefWidth="100.0"
        xmlns="http://javafx.com/javafx/8.0.141"
        xmlns:fx="http://javafx.com/fxml/1"
>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="image" fitHeight="100.0" fitWidth="100.0" layoutX="-26.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="-50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      </AnchorPane>
   </center>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Label fx:id="price" text="Label" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="30.0" />
            <Label fx:id="date" text="Label" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="30.0" />
         </AnchorPane>
   </bottom>
</BorderPane>
